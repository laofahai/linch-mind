{
    "test_daemon": {
        "socket_path": "/tmp/test_linch_mind.sock",
        "socket_type": "unix",
        "timeout": 5000,
        "retry_attempts": 3
    },
    "test_connectors": {
        "filesystem": {
            "id": "test-filesystem",
            "name": "Test Filesystem Connector",
            "watch_paths": ["/tmp/test_watch"],
            "enabled": true,
            "config": {
                "recursive": true,
                "ignore_hidden": true,
                "file_types": ["txt", "json", "log"]
            }
        },
        "clipboard": {
            "id": "test-clipboard", 
            "name": "Test Clipboard Connector",
            "enabled": true,
            "config": {
                "monitor_interval": 1000,
                "max_history": 100,
                "filter_duplicates": true
            }
        }
    },
    "test_scenarios": {
        "connection": {
            "max_connection_time_ms": 5000,
            "expected_handshake_timeout_ms": 2000,
            "heartbeat_interval_ms": 30000
        },
        "performance": {
            "max_message_latency_ms": 10,
            "min_throughput_rps": 100,
            "memory_limit_mb": 50
        },
        "reliability": {
            "max_retry_attempts": 3,
            "connection_timeout_ms": 10000,
            "message_timeout_ms": 5000
        }
    },

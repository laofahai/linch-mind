{
  "$schema": "../../connector.schema.json",
  "id": "clipboard",
  "name": "剪贴板连接器",
  "version": "0.1.12",
  "author": "Linch Mind Team",
  "build": {
    "build_command": "./build.sh",
    "post_build": "echo 'C++ build completed, binary size optimized'",
    "pre_build": "echo 'Preparing C++ build environment'"
  },
  "capabilities": {
    "hot_reload": true,
    "max_instances": 1,
    "supports_multiple_instances": false
  },
  "category": "system",
  "config_default_values": {
    "check_interval": 1.0,
    "content_filters": {
      "filter_sensitive": true,
      "filter_urls": false,
      "ignore_patterns": [
        "^\\s*$",
        "^[a-zA-Z0-9+/]+=*$"
      ]
    },
    "max_content_length": 50000,
    "min_content_length": 5,
    "performance": {
      "batch_size": 10,
      "enable_deduplication": true
    }
  },
  "config_schema": {
    "description": "高性能剪贴板监控连接器的配置选项",
    "properties": {
      "check_interval": {
        "default": 1.0,
        "description": "剪贴板内容检查频率，较小值消耗更多CPU",
        "maximum": 10.0,
        "minimum": 0.1,
        "title": "检查间隔 (秒)",
        "type": "number"
      },
      "content_filters": {
        "description": "配置内容过滤规则",
        "properties": {
          "filter_sensitive": {
            "default": true,
            "description": "是否过滤可能包含密码等敏感信息的内容",
            "title": "过滤敏感内容",
            "type": "boolean"
          },
          "filter_urls": {
            "default": false,
            "description": "是否忽略纯URL内容",
            "title": "过滤URL",
            "type": "boolean"
          },
          "ignore_patterns": {
            "default": [
              "^\\s*$",
              "^[a-zA-Z0-9+/]+=*$"
            ],
            "description": "正则表达式模式，匹配的内容将被忽略",
            "items": {
              "type": "string"
            },
            "title": "忽略模式",
            "type": "array"
          }
        },
        "title": "内容过滤",
        "type": "object"
      },
      "max_content_length": {
        "default": 50000,
        "description": "内容超过此长度将被截断",
        "maximum": 1000000,
        "minimum": 100,
        "title": "最大内容长度",
        "type": "integer"
      },
      "min_content_length": {
        "default": 5,
        "description": "内容少于此长度将被忽略",
        "maximum": 1000,
        "minimum": 1,
        "title": "最小内容长度",
        "type": "integer"
      },
      "performance": {
        "description": "性能相关配置",
        "properties": {
          "batch_size": {
            "default": 10,
            "description": "批量处理剪贴板变化的数量",
            "maximum": 100,
            "minimum": 1,
            "title": "批处理大小",
            "type": "integer"
          },
          "enable_deduplication": {
            "default": true,
            "description": "避免重复处理相同内容",
            "title": "启用去重",
            "type": "boolean"
          }
        },
        "title": "性能设置",
        "type": "object"
      }
    },
    "required": [
      "check_interval",
      "min_content_length",
      "max_content_length"
    ],
    "title": "剪贴板连接器配置",
    "type": "object"
  },
  "config_schema_source": "static",
  "config_ui_schema": {
    "ui:sections": {
      "basic_config": {
        "ui:collapsible": false,
        "ui:description": "剪贴板监控的基本配置",
        "ui:fields": {
          "check_interval": {
            "ui:help": "检查频率，影响响应速度和CPU占用",
            "ui:step": 0.1,
            "ui:widget": "slider"
          },
          "max_content_length": {
            "ui:help": "限制内容长度，避免处理过大文件",
            "ui:widget": "slider"
          },
          "min_content_length": {
            "ui:help": "太短的内容通常没有价值"
          }
        },
        "ui:icon": "clipboard",
        "ui:title": "基础设置"
      },
      "filter_config": {
        "ui:collapsed": true,
        "ui:collapsible": true,
        "ui:description": "配置要忽略的内容类型",
        "ui:fields": {
          "content_filters.filter_sensitive": {
            "ui:help": "自动检测并过滤密码、密钥等敏感内容",
            "ui:widget": "switch"
          },
          "content_filters.filter_urls": {
            "ui:help": "网址通常价值有限，可选择忽略",
            "ui:widget": "switch"
          },
          "content_filters.ignore_patterns": {
            "ui:help": "自定义正则表达式，匹配的内容将被忽略",
            "ui:widget": "tag_input"
          }
        },
        "ui:icon": "filter_alt",
        "ui:title": "内容过滤"
      },
      "performance_config": {
        "ui:collapsed": true,
        "ui:collapsible": true,
        "ui:description": "调整性能相关参数",
        "ui:fields": {
          "performance.batch_size": {
            "ui:help": "批量处理可提高效率，但会增加延迟",
            "ui:widget": "slider"
          },
          "performance.enable_deduplication": {
            "ui:help": "避免重复处理相同内容，节省资源",
            "ui:widget": "switch"
          }
        },
        "ui:icon": "speed",
        "ui:title": "性能优化"
      }
    },
    "ui_layout": "sections"
  },
  "description": "高性能C++版本剪贴板监控连接器，体积小巧，资源占用低，监控系统剪贴板变化并自动记录和索引复制的内容",
  "entry": {
    "development": {
      "args": [],
      "command": "./clipboard-connector",
      "working_dir": "."
    },
    "production": {
      "linux": "clipboard-connector",
      "macos": "clipboard-connector",
      "windows": "clipboard-connector.exe"
    }
  },
  "homepage": "https://github.com/linch-mind/connectors/clipboard",
  "icon": "clipboard",
  "id": "clipboard",
  "license": "MIT",
  "name": "剪贴板连接器",
  "permissions": [
    "system:clipboard",
    "network:daemon-api"
  ],
  "platforms": {
    "linux": {
      "min_version": "ubuntu-20.04"
    },
    "macos": {
      "min_version": "10.15"
    },
    "windows": {
      "min_version": "10"
    }
  },
  "version": "0.1.12"
}

{
  "environment": "staging",
  "server": {
    "debug": true,
    "log_level": "INFO",
    "ipc": {
      "socket_path": "~/.linch-mind/staging/daemon.socket",
      "timeout": 30,
      "buffer_size": 8192
    }
  },
  "database": {
    "use_encryption": true,
    "backup_enabled": true,
    "backup_interval_hours": 6,
    "connection_pool_size": 10,
    "query_timeout": 15
  },
  "ai": {
    "default_embedding_model": "all-MiniLM-L6-v2",
    "cache_embeddings": true,
    "providers": {
      "openai": {
        "enabled": true,
        "api_key_env": "OPENAI_API_KEY",
        "model": "gpt-3.5-turbo",
        "max_tokens": 2000
      }
    }
  },
  "storage": {
    "vector_dimension": 384,
    "vector_index_type": "faiss",
    "vector_max_workers": 4,
    "enable_backup": true,
    "backup_interval_hours": 12
  },
  "connector": {
    "health_check_interval": 30,
    "auto_restart_failed": true,
    "max_restart_attempts": 5,
    "startup_delay": 2
  }
}
